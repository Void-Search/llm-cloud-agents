{
    "name": "pytorch-amd development container",
    "build": {
        "dockerfile": "../docker-files/pytorch-amd/Dockerfile",
        "context": "../../"
    },
     "runArgs": [
        "--device", "/dev/kfd",
        "--device", "/dev/dri",
        "--group-add", "video",
        "--cap-add", "SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
        "--shm-size", "16G",
        "--ipc", "host"
     ],
     "hostRequirements": {
        "gpu": true,
        "memory": "16gb"
    },
    "containerEnv": {
        "PYTHONPATH": "${workspaceFolder}/src"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.debugpy",
                "shakram02.bash-beautify",
                "rogalmic.bash-debug",
                "mads-hartmann.bash-ide-vscode"
            ]
        }
    }
}